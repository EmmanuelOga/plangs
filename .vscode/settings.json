{
    "files.exclude": {
        "**/.git": true,
        "**/.DS_Store": true,
        "**/__pycache__": true
    },
    // Go Environment.
    "go.alternateTools": {
        "go": "${workspaceFolder}/.pixi/envs/default/bin/go"
    },
    // Python Environment.
    "python.analysis.typeCheckingMode": "strict",
    "python.defaultInterpreterPath": ".pixi/envs/default/bin/python3",
    "python.envFile": "${workspaceFolder}/.vscode/dev.env",
    "python.terminal.activateEnvironment": false, // Do not attempt to run conda activate.
    // SQLFluff.
    // "sqlfluff.config": "${workspaceFolder}/.sqlfluff",
    "sqlfluff.dialect": "sqlite",
    "sqlfluff.executablePath": "${workspaceFolder}/.pixi/envs/default/bin/sqlfluff",
    "sqlfluff.format.enabled": true,
}